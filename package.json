{
  "name": "enzyme-adapter-inferno",
  "description": "Inferno enzyme adapter",
  "version": "1.3.0",
  "main": "dist/InfernoEnzymeAdapter.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "eslint . --ignore-path .gitignore ",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run unit",
    "publish": "semantic-release",
    "prepublish": "npm run build",
    "prepare": "npm run build",
    "unit": "BABEL_ENV=test mocha --exit --require test/_helpers/setup --compilers js:babel-core/register,jsx:babel-core/register --recursive test"
  },
  "author": "Edd Yerburgh",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-inferno": "^4.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.1.2",
    "enzyme": "^3.5.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-inferno": "^7.10.0",
    "inferno": "^5.4.2",
    "inferno-component": "^5.4.2",
    "inferno-create-class": "^5.4.2",
    "inferno-create-element": "^5.4.2",
    "inferno-server": "^5.4.2",
    "inferno-test-utils": "^5.4.2",
    "jest": "^21.2.1",
    "jsdom": "6.1.0",
    "mocha": "3.5.3",
    "prop-types": "^15.6.2",
    "semantic-release": "^15.9.12",
    "sinon": "^4.0.2"
  },
  "peerDependencies": {
    "enzyme": "^3.1.0",
    "inferno": "4.x || 5.x",
    "inferno-create-element": "4.x || 5.x",
    "inferno-server": "4.x || 5.x"
  },
  "dependencies": {
    "inferno-vnode-flags": "^5.4.2"
  }
}
